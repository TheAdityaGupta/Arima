<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/text"
        android:text="JUST SAY"
        android:textSize="25sp" />

    <pl.droidsonroids.gif.GifImageView

        android:id="@+id/loadingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/you_are_hired_hired" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="348dp"
        android:layout_height="87dp"
        android:layout_below="@+id/loadingImage"
        android:layout_marginTop="7dp"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        android:text="Embedded in The app"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/from_web"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text2"
        android:layout_marginTop="88dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from_web"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="From the web"
        android:textSize="25sp" />

</RelativeLayout>
